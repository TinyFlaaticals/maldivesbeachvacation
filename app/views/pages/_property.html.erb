<%= link_to property do %>
<div class="flex-none w-80">
    <div class="h-48 rounded-3xl overflow-hidden">

        <% if property.property_images.any? && property.property_images.first.image.attached? %>
        <%= image_tag property.property_images.first.image, class: "w-full h-full object-cover" %>
        <% end %>
    </div>
    <div class="py-2 bg-white">
        <h3 class="font-semibold text-gray-900"><%= property.name %></h3>
        <p class="text-gray-600 text-sm"><%= property.address %></p>
    </div>
</div>
<% end %>