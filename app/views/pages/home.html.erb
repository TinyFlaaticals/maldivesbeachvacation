<div class="px-8 xl:px-12">
    <!-- Hero Section -->
    <div class="md:h-[calc(100vh-8rem)] xl:h-[calc(100vh-10rem)] mt-8 xl:mt-12">
        <div class="relative h-full w-full rounded-3xl overflow-hidden my-2">
            <%= image_tag "https://images.unsplash.com/photo-1542314831-068cd1dbfeeb", class: "w-full h-full object-cover" %>
            <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                <div class="text-center text-white px-4">
                    <h1 class="text-3xl md:text-5xl font-bold mb-4">Enjoy Your Dream Vacation</h1>
                    <p class="text-sm md:text-xl">Plan and book our perfect trip with expert advice, travel tips, destination information and inspiration from us</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Top Destinations -->
    <div class="py-16">
        <h2 class="text-3xl font-bold mb-8">Top Destinations</h2>
        <div class="flex gap-6 overflow-x-auto pb-6 ">
            <% Property.limit(6).each do |property| %>
            <%= render "pages/property", property: property %>
            <% end %>
        </div>
    </div>
    <!-- Mid Section Image -->
    <div class="relative h-[400px] md:h-[600px] w-full rounded-3xl overflow-hidden">
        <%= image_tag "https://images.unsplash.com/photo-1571896349842-33c89424de2d", class: "w-full h-full object-cover" %>
        <div class="absolute inset-0 bg-black bg-opacity-30"></div>
    </div>
    <!-- Popular Properties -->
    <div class="py-16">
        <h2 class="text-3xl font-bold mb-8">Popular Properties</h2>
        <div class="flex gap-6 overflow-x-auto pb-6">
            <% Property.limit(6).each do |property| %>
            <%= render "pages/property", property: property %>
            <% end %>
        </div>
    </div>
    <!-- Our Stories -->
    <div class="py-16">
        <h2 class="text-3xl font-bold mb-8">Stories</h2>
        <div class="flex gap-6 overflow-x-auto pb-6">
            <% @stories.each do |story| %>
            <%= link_to story do %>
            <div class="flex-none w-80 rounded-3xl overflow-hidden">
                <div class="bg-white overflow-hidden relative">
                    <%= image_tag story.image, class: "w-full h-48 object-cover" %>
                    <div class="absolute inset-0 bg-black bg-opacity-30 flex flex-col justify-end p-4">
                        <h3 class="font-semibold mb-2 text-white"><%= story.title.truncate(40) %></h3>
                        <p class="text-white text-sm"><%= story.content.to_plain_text.truncate(50) %></p>
                    </div>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>
    </div>
</div>