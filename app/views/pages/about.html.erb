<div class="bg-gray-50 py-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header section -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">About Us</h1>
      <div class="w-24 h-1 bg-blue-500 mx-auto mb-6"></div>
      <p class="max-w-2xl mx-auto text-lg text-gray-600">Discover the story behind our passion for creating perfect Maldives vacations</p>
    </div>
    
    <!-- Main content card -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <!-- Optional image section -->
        <div class="h-64 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1514282401047-d79a71a590e8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1200&q=80')"></div>
        
        <!-- Content section -->
        <div class="p-8">
          <div class="prose prose-lg max-w-none">
            <%= @admin_config.about_us %>
          </div>
        </div>
      </div>
      
      <!-- Contact info -->
      <div class="mt-12 bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Get in Touch</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-3">Contact Information</h3>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-blue-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span>+960 123 4567</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-blue-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span>info@maldivesbeachvacation.com</span>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-3">Office Hours</h3>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-blue-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Monday - Friday: 9:00 AM - 6:00 PM</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-blue-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Saturday: 10:00 AM - 4:00 PM</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
