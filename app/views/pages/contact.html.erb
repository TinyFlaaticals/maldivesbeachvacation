<div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Contact Us</h1>

    <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <%= notice %>
    </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-lg p-8 mt-8">
        <%= form_with url: contact_path, local: true, class: "space-y-6" do |f| %>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Your Email
            </label>
            <%= f.email_field :email, class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Subject
            </label>
            <%= f.text_field :subject, class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Message
            </label>
            <%= f.text_area :message, rows: 6, class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <div>
            <%= f.submit "Send Message", class: "w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-primary/90 transition duration-200" %>
        </div>
        <% end %>
    </div>

    <div class="mt-12 grid md:grid-cols-3 gap-8 text-center">
        <div class="p-6 bg-white rounded-lg shadow-lg">
            <div class="text-2xl mb-4">📍</div>
            <h3 class="font-medium mb-2">Address</h3>
            <p class="text-gray-600">Male', Maldives</p>
        </div>

        <div class="p-6 bg-white rounded-lg shadow-lg">
            <div class="text-2xl mb-4">📧</div>
            <h3 class="font-medium mb-2">Email</h3>
            <p class="text-gray-600 break-words">contact@maldivesbeachvacation.com</p>
        </div>

        <div class="p-6 bg-white rounded-lg shadow-lg">
            <div class="text-2xl mb-4">📱</div>
            <h3 class="font-medium mb-2">Phone</h3>
            <p class="text-gray-600">+960 999-9999</p>
        </div>
    </div>
</div>