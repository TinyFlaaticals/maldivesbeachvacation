<div class="bg-gray-100 pb-8">
    <div class="bg-white w-full lg:px-40 md:px-20 px-10">
        <div class="h-[300px] lg:h-[400px]  my-10">
            <div class="grid grid-cols-12 gap-4 h-[300px] lg:h-[400px]">
                <!-- First column - 70% width -->
                <div class="col-span-8">
                    <% if @property.property_images.present? %>
                    <%= image_tag @property.property_images.first.image, alt: "property view 1", class: "h-[300px] lg:h-[400px] w-full rounded-3xl object-cover" %>
                    <% end %>
                </div>
                <!-- Second column - 30% width -->
                <div class="col-span-4 grid grid-rows-2 gap-4">
                    <!-- First row - 50% height -->
                    <div>
                        <% if @property.property_images[1].present? %>
                        <%= image_tag @property.property_images[1].image, alt: "property view 2", class: "h-[142px] lg:h-[192px] w-full rounded-3xl object-cover" %>
                        <% end %>
                    </div>
                    <!-- Second row - 50% height -->
                    <div>
                        <% if @property.property_images[2].present? %>
                        <%= image_tag @property.property_images[2].image, alt: "property view 3", class: "h-[142px] lg:h-[192px] w-full rounded-3xl object-cover" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex">
            <%= link_to "Overview", property_path(@property), class: "py-1 px-2 font-medium relative after:absolute after:bottom-[-4px] after:left-0 after:w-full after:h-1 after:bg-primary" %>
        </div>
    </div>
    <div class=" lg:mx-40 md:mx-20 mx-10  my-10">
        <div>
            <h1 class="text-2xl font-medium"><%= @property.name %></h1>
            <p class="text-sm text-gray-500 mt-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline-block mr-1 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
                <%= @property.address %>
            </p>
        </div>
    </div>
    <div class="lg:grid lg:grid-cols-3 lg:gap-6 lg:mx-40 md:mx-20 mx-10">
        <div class="bg-white rounded-3xl lg:mx-0   md:p-12 p-6 lg:col-span-2 mb-6 lg:mb-0">
            <div>
                <h2 class="text-xl font-medium mb-4">Overview</h2>
                <p><%= @property.overview %></p>
                <hr class="my-4">
                <h2 class="text-xl font-medium mb-4">Facilities</h2>
                <div class="grid grid-cols-2 gap-1">
                    <% @property.facilities.each do |facility| %>
                    <div class="flex items-center">
                        <%= facility.name %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-3xl lg:mx-0 md:p-12 p-6 h-fit">
            <div class="mb-6">
                <h3 class="text-xl font-medium mb-2">Offers</h3>
                <% if @property.offer_text.present? %>
                <div class="bg-green-50 rounded-lg p-4">
                    <p class="text-green-700"><%= @property.offer_text %></p>
                </div>
                <%else%>
                <div class="">
                    <p class="text-gray-400">No offers available at this time</p>
                </div>
                <% end %>
            </div>


            <div>
                <h3 class="text-xl font-medium mb-2">Discounts</h3>

                <% if @property.discount_text.present? %>
                <div class="bg-red-50 rounded-lg p-4">
                    <p class="text-red-700"><%= @property.discount_text %></p>
                </div>
                <%else%>
                <div class="">
                    <p class="text-gray-400">No discounts available at this time</p>
                </div>
                <% end %>
            </div>

        </div>
    </div>
    <h1 class="text-2xl font-medium mt-10 mb-10 lg:mx-40 md:mx-20 mx-10">Do you wish to book your stay?</h1>
    <div class="bg-white rounded-3xl lg:mx-40 md:mx-20 mx-10 md:p-12 p-6" id="booking-form">
        <% if notice %>
        <div class="bg-green-50 p-4 rounded-lg mb-6">
            <p class="text-green-700"><%= notice %></p>
        </div>
        <% end %>
        <%if @booking.persisted?%>
        <p class="text-green-700">Your booking has been created.</p>
        <%else%>
        <%= render "properties/booking_form", booking: @booking, property: @property %>
        <%end%>
    </div>
</div>