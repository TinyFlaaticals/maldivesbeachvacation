<div class="bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="grid gap-4">
      <div>
        <% if @hotel.images[0].present? %>
          <%= image_tag @hotel.images[0], alt: "hotel view 1", class: "h-auto w-full max-w-full rounded-lg object-cover object-center md:h-[480px]" %>
        <% end %>
      </div>
      <div class="grid grid-cols-5 gap-4">
        <% (0..4).each do |i| %>
          <div>
            <% if @hotel.images[i].present? %>
              <%= image_tag @hotel.images[i], alt: "hotel view #{i+1}", class: "object-cover object-center h-20 max-w-full rounded-lg cursor-pointer" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="bg-white rounded-3xl lg:mx-40 md:mx-20 mx-10 my-20 md:p-12 p-6">
    <div>
      <h2 class="text-xl font-medium mb-4">Overview</h2>
      <p><%= @hotel.overview %></p>
    </div>
  </div>
</div>
