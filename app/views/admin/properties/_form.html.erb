<%= form_with(model: [:admin, property]) do |form| %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if property.errors.any? %>
      <div class="mb-6 rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <% property.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <!-- Form Navigation -->
    <div class="mb-8 bg-white shadow-sm rounded-lg overflow-hidden">
      <div class="flex overflow-x-auto py-3 px-4">
        <nav class="flex space-x-4" aria-label="Form Sections">
          <a href="#basic-info" class="text-gray-600 hover:text-indigo-600 whitespace-nowrap px-3 py-2 font-medium text-sm rounded-md hover:bg-gray-50">
            Basic Information
          </a>
          <a href="#pricing" class="text-gray-600 hover:text-indigo-600 whitespace-nowrap px-3 py-2 font-medium text-sm rounded-md hover:bg-gray-50">
            Pricing & Offers
          </a>
          <a href="#features" class="text-gray-600 hover:text-indigo-600 whitespace-nowrap px-3 py-2 font-medium text-sm rounded-md hover:bg-gray-50">
            Features & Amenities
          </a>
          <a href="#media" class="text-gray-600 hover:text-indigo-600 whitespace-nowrap px-3 py-2 font-medium text-sm rounded-md hover:bg-gray-50">
            Media
          </a>
          <a href="#room-categories" class="text-gray-600 hover:text-indigo-600 whitespace-nowrap px-3 py-2 font-medium text-sm rounded-md hover:bg-gray-50">
            Room Categories
          </a>
          <a href="#overview" class="text-gray-600 hover:text-indigo-600 whitespace-nowrap px-3 py-2 font-medium text-sm rounded-md hover:bg-gray-50">
            Detailed Overview
          </a>
        </nav>
      </div>
    </div>

    <div class="space-y-16 divide-y divide-gray-200">
      <!-- Basic Information Section -->
      <div id="basic-info" class="pt-6 pb-8">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-xl font-bold leading-8 text-gray-900">Basic Information</h2>
              <p class="text-sm text-gray-500">Required fields are marked with an asterisk (*)</p>
            </div>
            <div class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              Step 1 of 6
            </div>
          </div>
          
          <div class="p-6">
            <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-6">
              <div class="sm:col-span-4">
                <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" do %>
                  Name <span class="text-red-500">*</span>
                <% end %>
                <div class="mt-2">
                  <%= form.text_field :name, 
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <%= form.label :address, class: "block text-sm font-medium leading-6 text-gray-900" do %>
                  Address <span class="text-red-500">*</span>
                <% end %>
                <div class="mt-2">
                  <%= form.text_field :address,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <%= form.label :tagline, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= form.text_field :tagline,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "A short catchy tagline (e.g., 'Luxury barefoot living in paradise')" %>
                </div>
              </div>

              <div class="sm:col-span-2">
                <%= form.label :star_rating, class: "block text-sm font-medium leading-6 text-gray-900" do %>
                  Star Rating <span class="text-red-500">*</span>
                <% end %>
                <div class="mt-2">
                  <%= form.number_field :star_rating, 
                      min: 1.0, max: 5.0, step: 0.1,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "4.5" %>
                </div>
                <p class="mt-1 text-xs text-gray-500">Rating between 1.0 and 5.0 (e.g., 4.5)</p>
              </div>

              <div class="col-span-full">
                <%= form.label :short_description, class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= form.text_area :short_description,
                      rows: 3,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "Brief description that will appear in search results and property cards" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pricing Section -->
      <div id="pricing" class="pt-6 pb-8">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-xl font-bold leading-8 text-gray-900">Pricing & Offers</h2>
              <p class="text-sm text-gray-500">Set up your pricing and special promotions</p>
            </div>
            <div class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              Step 2 of 6
            </div>
          </div>
          
          <div class="p-6">
            <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-6">
              <div class="sm:col-span-3">
                <%= form.label :normal_price, class: "block text-sm font-medium leading-6 text-gray-900" do %>
                  Price <span class="text-red-500">*</span>
                <% end %>
                <div class="mt-2 relative rounded-md shadow-sm">
                  <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                    <span class="text-gray-500 sm:text-sm">$</span>
                  </div>
                  <%= form.number_field :normal_price, min: 0, step: "0.01",
                      class: "block w-full rounded-md border-0 py-1.5 pl-7 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>
              <div class="col-span-full lg:col-span-3">
                <%= form.label :discount_text, "Discount Description", class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= form.text_field :discount_text,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "e.g., 'Receive 30% discount on a restaurant'" %>
                </div>
              </div>
              <div class="col-span-full lg:col-span-3">
                <%= form.label :offer_text, "Special Offer", class: "block text-sm font-medium leading-6 text-gray-900" %>
                <div class="mt-2">
                  <%= form.text_field :offer_text,
                      class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                      placeholder: "e.g., 'Free breakfast for stays of 3+ nights'" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div id="features" class="pt-6 pb-8">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-xl font-bold leading-8 text-gray-900">Features & Amenities</h2>
              <p class="text-sm text-gray-500">Select all that apply to this property</p>
            </div>
            <div class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              Step 3 of 6
            </div>
          </div>
          
          <div class="p-6 space-y-10">
            <div>
              <%= form.label :facilities, class: "block text-sm font-medium leading-6 text-gray-900 mb-3" %>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
                  <%= form.collection_check_boxes :facility_ids, Facility.all, :id, :name do |b| %>
                    <div class="relative flex items-start">
                      <div class="flex h-6 items-center">
                        <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                      </div>
                      <div class="ml-3 text-sm leading-6">
                        <%= b.label class: "font-medium text-gray-900" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <div>
              <%= form.label :activities, class: "block text-sm font-medium leading-6 text-gray-900 mb-3" %>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
                  <%= form.collection_check_boxes :activity_ids, Activity.all, :id, :name do |b| %>
                    <div class="relative flex items-start">
                      <div class="flex h-6 items-center">
                        <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                      </div>
                      <div class="ml-3 text-sm leading-6">
                        <%= b.label class: "font-medium text-gray-900" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <div>
              <%= form.label :popular_filters, class: "block text-sm font-medium leading-6 text-gray-900 mb-3" %>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
                  <%= form.collection_check_boxes :popular_filter_ids, PopularFilter.all, :id, :name do |b| %>
                    <div class="relative flex items-start">
                      <div class="flex h-6 items-center">
                        <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                      </div>
                      <div class="ml-3 text-sm leading-6">
                        <%= b.label class: "font-medium text-gray-900" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Media Section -->
      <div id="media" class="pt-6 pb-8">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-xl font-bold leading-8 text-gray-900">Media</h2>
              <p class="text-sm text-gray-500">Upload high-quality images of your property</p>
            </div>
            <div class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              Step 4 of 6
            </div>
          </div>
          
          <div class="p-6">
            <div class="mb-4">
              <%= link_to_add_association form, :property_images, 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                partial: 'property_image_form',
                data: { association_insertion_node: '#property-images-container', association_insertion_method: 'append' } do %>
                <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Image
              <% end %>
              <p class="mt-2 text-sm text-gray-500">Recommended: at least 3 high-quality images (1200×800px minimum)</p>
            </div>
            <div id="property-images-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <%= form.fields_for :property_images do |property_image_fields| %>
                <%= render 'property_image_form', f: property_image_fields %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Room Categories Section -->
      <div id="room-categories" class="pt-6 pb-8">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-xl font-bold leading-8 text-gray-900">Room Categories</h2>
              <p class="text-sm text-gray-500">Add different room types available at this property</p>
            </div>
            <div class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              Step 5 of 6
            </div>
          </div>
          
          <div class="p-6">
            <div id="room-categories-container" class="space-y-8">
              <%= form.fields_for :room_categories do |room_category_fields| %>
                <%= render 'room_category_fields', f: room_category_fields %>
              <% end %>
            </div>
            <div class="mt-6">
              <%= link_to_add_association form, :room_categories, 
                class: "inline-flex items-center px-4 py-2 border-2 border-indigo-400 shadow-sm text-sm font-medium rounded-md text-indigo-700 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                data: { association_insertion_node: '#room-categories-container', association_insertion_method: 'append' } do %>
                <svg class="-ml-1 mr-2 h-5 w-5 text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Room Category
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Overview Section -->
      <div id="overview" class="pt-6 pb-8">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-xl font-bold leading-8 text-gray-900">Detailed Overview</h2>
              <p class="text-sm text-gray-500">Provide a rich description of your property</p>
            </div>
            <div class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              Step 6 of 6
            </div>
          </div>
          
          <div class="p-6">
            <%= form.rich_text_area :overview, placeholder: "Detailed information about your property. You can add formatting, lists, and more..." %>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="mt-12 flex items-center justify-end gap-x-6 border-t border-gray-900/10 pt-8">
      <%= link_to "Cancel", admin_properties_path, class: "text-sm font-semibold leading-6 text-gray-900 px-3 py-2 rounded-md hover:bg-gray-50" %>
      
      <button type="reset" class="rounded-md bg-gray-100 px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-200">
        Reset Form
      </button>
      
      <%= form.submit class: "rounded-md bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>
<% end %>

<script>
  // Smooth scrolling for section navigation
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        
        // Add active class to clicked link and remove from others
        document.querySelectorAll('nav a').forEach(a => a.classList.remove('bg-gray-50', 'text-indigo-600'));
        this.classList.add('bg-gray-50', 'text-indigo-600');
        
        // Scroll to section
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
    
    // Highlight active section on scroll
    const sections = document.querySelectorAll('[id^="basic-info"], [id^="pricing"], [id^="features"], [id^="media"], [id^="room-categories"], [id^="overview"]');
    const navLinks = document.querySelectorAll('nav a[href^="#"]');
    
    function highlightActiveSection() {
      let scrollPosition = window.scrollY + 100;
      
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        const sectionHeight = section.offsetHeight;
        const sectionId = section.getAttribute('id');
        
        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          navLinks.forEach(link => {
            link.classList.remove('bg-gray-50', 'text-indigo-600');
            if (link.getAttribute('href') === '#' + sectionId) {
              link.classList.add('bg-gray-50', 'text-indigo-600');
            }
          });
        }
      });
    }
    
    window.addEventListener('scroll', highlightActiveSection);
    
    // Initial highlight
    highlightActiveSection();
  });
</script>