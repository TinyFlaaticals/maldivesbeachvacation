<%= form_with(model: [:admin, property]) do |form| %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if property.errors.any? %>
      <div class="mb-6 rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <% property.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="space-y-16 divide-y divide-gray-200">
      <!-- Basic Information Section -->
      <div class="pt-12 pb-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold leading-8 text-gray-900">Basic Information</h2>
          <p class="text-base text-gray-500">Required fields are marked with an asterisk (*)</p>
        </div>
        <div class="mt-6 grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" do %>
              Name <span class="text-red-500">*</span>
            <% end %>
            <div class="mt-2">
              <%= form.text_field :name, 
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :address, class: "block text-sm font-medium leading-6 text-gray-900" do %>
              Address <span class="text-red-500">*</span>
            <% end %>
            <div class="mt-2">
              <%= form.text_field :address,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :tagline, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :tagline,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= form.label :short_description, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_area :short_description,
                  rows: 3,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Pricing Section -->
      <div class="pt-12 pb-8">
        <h2 class="text-2xl font-bold leading-8 text-gray-900 mb-8">Pricing & Offers</h2>
        <div class="mt-6 grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= form.label :normal_price, class: "block text-sm font-medium leading-6 text-gray-900" do %>
              Normal Price <span class="text-red-500">*</span>
            <% end %>
            <div class="mt-2">
              <%= form.text_field :normal_price,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :discounted_price, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :discounted_price,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full lg:col-span-3">
            <%= form.label :discount_text, "Discount Description", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :discount_text,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              <p class="mt-1 text-sm text-gray-500">Example: Receive 30% discount on a restaurant</p>
            </div>
          </div>

          <div class="col-span-full lg:col-span-3">
            <%= form.label :offer_text, "Special Offer", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :offer_text,
                  class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div class="pt-12 pb-8">
        <h2 class="text-2xl font-bold leading-8 text-gray-900 mb-8">Features & Amenities</h2>
        <div class="mt-6 space-y-10">
          <div>
            <%= form.label :facilities, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
                <%= form.collection_check_boxes :facility_ids, Facility.all, :id, :name do |b| %>
                  <div class="relative flex items-start">
                    <div class="flex h-6 items-center">
                      <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                    </div>
                    <div class="ml-3 text-sm leading-6">
                      <%= b.label class: "font-medium text-gray-900" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div>
            <%= form.label :activities, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
                <%= form.collection_check_boxes :activity_ids, Activity.all, :id, :name do |b| %>
                  <div class="relative flex items-start">
                    <div class="flex h-6 items-center">
                      <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                    </div>
                    <div class="ml-3 text-sm leading-6">
                      <%= b.label class: "font-medium text-gray-900" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div>
            <%= form.label :popular_filters, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
                <%= form.collection_check_boxes :popular_filter_ids, PopularFilter.all, :id, :name do |b| %>
                  <div class="relative flex items-start">
                    <div class="flex h-6 items-center">
                      <%= b.check_box class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
                    </div>
                    <div class="ml-3 text-sm leading-6">
                      <%= b.label class: "font-medium text-gray-900" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Media Section -->
      <div class="pt-12 pb-8">
        <h2 class="text-2xl font-bold leading-8 text-gray-900 mb-8">Media</h2>
        <div class="mt-6">
          <div class="mb-4">
            <%= link_to_add_association form, :property_images, 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              partial: 'property_image_form',
              data: { association_insertion_node: '#property-images-container', association_insertion_method: 'append' } do %>
              <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Image
            <% end %>
          </div>
          <div id="property-images-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <%= form.fields_for :property_images do |property_image_fields| %>
              <%= render 'property_image_form', f: property_image_fields %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Room Categories Section -->
      <div class="pt-12 pb-8">
        <h2 class="text-2xl font-bold leading-8 text-gray-900 mb-8">Room Categories</h2>
        <div class="mt-6 space-y-8">
          <div id="room-categories-container">
            <%= form.fields_for :room_categories do |room_category_fields| %>
              <%= render 'room_category_fields', f: room_category_fields %>
            <% end %>
          </div>
          <div>
            <%= link_to_add_association form, :room_categories, 
              class: "mt-2 inline-flex items-center px-4 py-2 border-2 border-indigo-400 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              data: { association_insertion_node: '#room-categories-container', association_insertion_method: 'append' } do %>
              <svg class="-ml-1 mr-2 h-5 w-5 text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Room Category
            <% end %>
          </div>
        </div>
      </div>

      <!-- Overview Section -->
      <div class="pt-12 pb-8">
        <h2 class="text-2xl font-bold leading-8 text-gray-900 mb-8">Detailed Overview</h2>
        <div class="mt-6">
          <%= form.label :overview, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.rich_text_area :overview %>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="mt-12 flex items-center justify-end gap-x-8 border-t border-gray-900/10 pt-8">
      <%= link_to "Cancel", admin_properties_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <%= form.submit class: "rounded-md bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>
<% end %>