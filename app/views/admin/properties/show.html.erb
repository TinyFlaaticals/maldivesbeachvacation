<div class="container mt-4">
    <h1 class="text-2xl font-bold leading-9 tracking-tight text-gray-900 mb-4"><%= @property.name %></h1>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
        <div class="px-4 py-6 sm:p-8">
            <dl class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Name</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700"><%= @property.name %></dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Address</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700"><%= @property.address %></dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Tagline</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700"><%= @property.tagline %></dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Description</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700"><%= @property.short_description %></dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Normal Price</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700">$<%= @property.normal_price %></dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Current Price</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700">$<%= @property.current_price %></dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Discount</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700"><%= @property.discount_percent %>%</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium leading-6 text-gray-900">Location</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700">
                        Lat: <%= @property.latitude %>, Long: <%= @property.longitude %>
                    </dd>
                </div>
            </dl>

            <div class="flex items-center justify-between mt-8">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Room Categories</h3>
                <%= link_to "New room category", new_admin_property_room_category_path(@property), class: "rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-300">
                    <thead>
                        <tr>
                            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Room Type</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Normal Price</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Discount</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Current Price</th>
                            <th scope="col" class="relative py-3.5 pl-3 pr-4"><span class="sr-only">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% @property.room_categories.each do |room_category| %>
                        <tr>
                            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900"><%= room_category.name %></td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">$<%= room_category.normal_price %></td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                <% if room_category.discounted_price.present? %>
                                $<%= room_category.discounted_price %> (<%= room_category.discount_percent %>%)
                                <% else %>
                                -
                                <% end %>
                            </td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">$<%= room_category.current_price %></td>
                            <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium">
                                <%= link_to "View", admin_property_room_category_path(@property, room_category), class: "text-indigo-600 hover:text-indigo-900" %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-6 flex items-center justify-between">
        <div class="flex items-center gap-x-4">
            <%= link_to admin_properties_path, class: "inline-flex items-center gap-x-2 text-sm font-semibold text-gray-900 hover:text-gray-700" do %>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd" />
            </svg>
            Back to properties
            <% end %>
        </div>
        <div class="flex items-center gap-x-4">
            <%= link_to edit_admin_property_path(@property), class: "inline-flex items-center gap-x-2 rounded-md bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
            <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
            </svg>
            Edit property
            <% end %>
            <%= button_to admin_property_path(@property),
          method: :delete,
          class: "inline-flex items-center gap-x-2 rounded-md bg-red-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600",
          form: { class: "inline-block" },
          data: { turbo_confirm: "Are you sure you want to delete this property?" } do %>
            <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
            </svg>
            Delete property
            <% end %>
        </div>
    </div>
</div>