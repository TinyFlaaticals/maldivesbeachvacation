<% content_for :title, "Editing story" %>

<div class="container mx-auto px-4 py-8">
  <!-- Page Header with Navigation -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Editing story</h1>
      <p class="mt-1 text-sm text-gray-500">Make changes to your story content and details</p>
    </div>
    
    <div class="mt-4 md:mt-0 flex items-center space-x-3">
      <%= link_to admin_stories_path, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to stories
      <% end %>
      
      <%= link_to story_path(@story), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50", target: "_blank" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
        View story
      <% end %>
    </div>
  </div>

  <%= form_with(model: [:admin, @story], local: true, class: "mt-6") do |form| %>
    <% if @story.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There <%= @story.errors.count == 1 ? 'is' : 'are' %> <%= pluralize(@story.errors.count, "error") %> with this story:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @story.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column - Story Content -->
      <div class="lg:col-span-2">
        <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Story Details</h3>
          </div>
          <div class="p-6">
            <div class="mb-6">
              <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :title, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter story title" %>
            </div>

            <div class="mb-6">
              <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="bg-white border border-gray-300 rounded-md">
                <div class="border-b border-gray-300 bg-gray-50 px-3 py-2 flex flex-wrap gap-1">
                  <button type="button" class="p-1 rounded hover:bg-gray-200" title="Bold">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                  <div class="border-r border-gray-300 mx-1"></div>
                  <button type="button" class="p-1 rounded hover:bg-gray-200" title="Bold">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                  </button>
                  <!-- More formatting buttons, matching the actual rich text editor -->
                </div>
                <%= form.rich_text_area :content, class: "block w-full p-3 focus:outline-none focus:ring-0 focus:border-0 border-0", placeholder: "Start writing your story..." %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Story Metadata -->
      <div class="lg:col-span-1">
        <!-- Featured Image -->
        <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Featured Image</h3>
          </div>
          <div class="p-6">
            <% if @story.image.attached? %>
              <div class="mb-4">
                <%= image_tag @story.image, class: "w-full h-auto object-cover rounded-md" %>
              </div>
              <div class="flex justify-between items-center">
                <div class="text-sm text-gray-500">Current image</div>
                <%= link_to "Remove", remove_image_admin_story_path(@story), class: "inline-flex items-center px-2.5 py-1.5 border border-gray-300 text-xs font-medium rounded text-red-700 bg-white hover:bg-gray-50", data: { turbo_method: :delete, confirm: "Are you sure you want to remove this image?" } %>
              </div>
            <% end %>
            
            <div class="mt-4">
              <%= form.label :image, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                      <span>Upload a file</span>
                      <%= form.file_field :image, class: "sr-only", id: "file-upload" %>
                    </label>
                    <p class="pl-1">or drag and drop</p>
                  </div>
                  <p class="text-xs text-gray-500">PNG, JPG, GIF up to 5MB</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Tags Section -->
        <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Tags</h3>
          </div>
          <div class="p-6">
            <%= form.label :tag_list, "Tags (comma separated)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :tag_list, value: @story.tags.map(&:name).join(', '), class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "e.g., Maldives, Beach, Holiday" %>
            <p class="mt-2 text-xs text-gray-500">Add tags separated by commas (e.g., "Maldives, Beach, Holiday")</p>
            
            <% if @story.tags.any? %>
              <div class="mt-4">
                <h4 class="text-sm font-medium text-gray-700 mb-2">Current tags:</h4>
                <div class="flex flex-wrap gap-2">
                  <% @story.tags.each do |tag| %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                      <%= tag.name %>
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Publishing Options -->
        <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
          <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Publishing Options</h3>
          </div>
          <div class="p-6">
            <div class="flex items-start mb-4">
              <%= form.check_box :published, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mt-1 mr-2" %>
              <div>
                <%= form.label :published, "Publish this story", class: "block text-sm font-medium text-gray-700" %>
                <p class="text-xs text-gray-500 mt-1">Unpublished stories won't appear on your website</p>
              </div>
            </div>
            
            <div class="mt-4">
              <%= form.label :publish_date, "Publish Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.datetime_field :publish_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col space-y-3">
          <%= form.submit "Update Story", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          
          <%= link_to "Cancel", admin_story_path(@story), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-center" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Preview Section -->
  <div class="mt-6">
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Story Preview</h3>
      </div>
      <div class="p-6">
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
          <div class="flex flex-col md:flex-row gap-6 items-start">
            <% if @story.image.attached? %>
              <div class="w-full md:w-64 flex-shrink-0">
                <%= image_tag @story.image, class: "w-full h-auto rounded-md object-cover" %>
              </div>
            <% end %>
            <div>
              <h4 class="text-xl font-semibold mb-3"><%= @story.title %></h4>
              <div class="text-sm text-gray-500 line-clamp-3">
                <%= @story.content.to_plain_text.truncate(200) if @story.content.present? %>
              </div>
              <div class="mt-3 flex gap-2">
                <% @story.tags.each do |tag| %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Preview image upload before saving
  document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('file-upload');
    if (fileInput) {
      fileInput.onchange = () => {
        const [file] = fileInput.files;
        if (file) {
          const previewContainer = fileInput.closest('.p-6').querySelector('div');
          if (!previewContainer.querySelector('.preview-image')) {
            const img = document.createElement('img');
            img.classList.add('preview-image', 'w-full', 'h-auto', 'object-cover', 'rounded-md', 'mb-4');
            previewContainer.prepend(img);
          }
          const previewImage = previewContainer.querySelector('.preview-image');
          previewImage.src = URL.createObjectURL(file);
        }
      };
    }
  });
</script>
