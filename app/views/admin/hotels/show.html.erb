<% content_for :title, @hotel.name %>
<div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 ">
    <!-- Image gallery -->
    <div class="flex flex-col">
      <div class="w-full">
        <% if @hotel.images.attached? %>
          <div class="grid grid-cols-2 gap-4">
            <% @hotel.images.each do |image| %>
              <div class="relative h-48">
                <%= image_tag image, class: "h-full w-full object-cover object-center rounded-lg" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="h-48 bg-gray-200 rounded-lg flex items-center justify-center">
            <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Hotel info -->
    <div class="mt-10">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900"><%= @hotel.name %></h1>
      <div class="mt-3">
        <h2 class="sr-only">Hotel rating</h2>
        <div class="flex items-center">
          <div class="flex items-center">
            <% 4.5.to_i.times do %>
              <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
          <p class="ml-2 text-sm text-gray-900">(<%= 4.5 %>)</p>
        </div>
      </div>
      <div class="mt-6">
        <h3 class="">Overview</h3>
        <div class="space-y-6 text-base text-gray-700">
          <%= @hotel.overview %>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="text-sm font-medium text-gray-900">Location</h3>
        <div class="mt-2 text-sm text-gray-500">
          Latitude: <%= @hotel.latitude %><br>
          Longitude: <%= @hotel.longitude %>
        </div>
      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to "Edit this hotel", edit_admin_hotel_path(@hotel) %> |
  <%= link_to "Back to hotels", admin_hotels_path %>
  <%= button_to "Destroy this hotel", [:admin, @hotel], method: :delete %>
</div>
