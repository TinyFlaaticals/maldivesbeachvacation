<% content_for :title, "Hotels" %>
<div class="flex justify-between items-center">
  <h1 class="text-2xl font-bold tracking-tight text-gray-900">Hotels</h1>
  <%= link_to "New hotel", new_admin_hotel_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
<div id="hotels" class="mt-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @hotels.each do |hotel| %>
    <%= render hotel %>
  <% end %>
</div>