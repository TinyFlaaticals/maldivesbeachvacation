<%= form_with(model: [:admin, hotel], class: "space-y-12 mx-8" ) do |form| %>
  <% if hotel.errors.any? %>
    <div class="text-red-600">
      <h2><%= pluralize(hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>
      <ul>
        <% hotel.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="border-b border-gray-900/10 pb-12">
    <h2 class="text-base/7 font-semibold text-gray-900">Hotel Details</h2>
    <p class="mt-1 text-sm/6 text-gray-600">Fill in the details for the hotel.</p>
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-4">
        <%= form.label :name, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= form.text_field :name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>
      <div class="col-span-full">
        <%= form.label :content, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= form.rich_text_area :overview, rows: 10, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>
      <div class="col-span-full">
        <%= form.label :images, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= form.file_field :images, multiple: true, class: "block w-full text-sm/6 text-gray-900 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm/6 file:font-semibold file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100" %>
        </div>
        <p class="mt-3 text-sm/6 text-gray-600">Upload one or more images of the hotel.</p>
      </div>
      <div class="sm:col-span-3">
        <%= form.label :latitude, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= form.text_field :latitude, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>
      <div class="sm:col-span-3">
        <%= form.label :longitude, class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= form.text_field :longitude, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", admin_hotels_path, class: "text-sm/6 font-semibold text-gray-900" %>
    <%= form.submit class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
