<% if notice %>
  <div class="rounded-md bg-green-50 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <%= render @facility %>
  </div>
</div>

<div class="mt-6 flex items-center justify-start gap-x-6">
  <%= link_to admin_facilities_path, class: "text-sm font-semibold leading-6 text-gray-900" do %>
    ‚Üê Back to facilities
  <% end %>
  
  <%= link_to edit_admin_facility_path(@facility), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
    Edit this facility
  <% end %>

  <%= button_to admin_facility_path(@facility), 
      method: :delete,
      class: "rounded-md bg-red-600 px-3 py-2 text-sm font-semibold shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600",
      form: { data: { turbo_confirm: "Are you sure you want to delete this facility?" } } do %>
    Delete facility
  <% end %>
</div>
