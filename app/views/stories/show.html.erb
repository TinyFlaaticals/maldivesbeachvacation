<% content_for :title, @story.title %>

<!-- Hero Image Section -->
<section class="bg-gray-50 pt-8">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @story.image.attached? %>
      <div class="relative h-[300px] md:h-[400px] lg:h-[500px] rounded-2xl overflow-hidden">
        <%= image_tag @story.image, class: "w-full h-full object-cover" %>
        <div class="absolute inset-0 bg-black bg-opacity-30"></div>
      </div>
    <% end %>
  </div>
</section>

<!-- Story Content Section -->
<section class="py-8 md:py-12 bg-gray-50">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-8">
        <div class="bg-white rounded-2xl shadow-sm overflow-hidden p-6 md:p-8">
          <!-- Story Details -->
          <div class="flex items-center mb-4 text-sm text-gray-500">
            <span><%= @story.created_at.strftime("%B %d, %Y") %></span>
            <span class="mx-2">â€¢</span>
            <span>Travel</span>
          </div>
          
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 mb-6"><%= @story.title %></h1>
          
          <!-- Share Buttons -->
          <div class="flex items-center space-x-4 mb-8">
            <span class="text-sm font-medium text-gray-700">Share:</span>
            <div class="flex space-x-3">
              <!-- Facebook -->
              <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-white hover:bg-blue-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                </svg>
              </a>
              <!-- Twitter/X -->
              <a href="https://twitter.com/intent/tweet?text=<%= @story.title %>&url=<%= request.original_url %>" target="_blank" class="w-8 h-8 rounded-full bg-black flex items-center justify-center text-white hover:bg-gray-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <!-- WhatsApp -->
              <a href="https://wa.me/?text=<%= request.original_url %>" target="_blank" class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white hover:bg-green-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </a>
              <!-- LinkedIn -->
              <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= request.original_url %>" target="_blank" class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white hover:bg-blue-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Story Content -->
          <div class="prose prose-lg max-w-none text-gray-700">
            <%= @story.content %>
          </div>
        </div>
      </div>
      
      <!-- Sidebar -->
      <div class="lg:col-span-4">
        <div class="bg-white rounded-2xl shadow-sm overflow-hidden p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Related Topics</h3>
          <div class="flex flex-wrap gap-2">
            <% @story_tags.each do |tag| %>
              <span class="px-3 py-1 bg-gray-100 rounded-full text-sm text-gray-700 hover:bg-gray-200 cursor-pointer"><%= tag.name %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Popular Properties Section -->
<section class="py-12 md:py-16 bg-gray-50">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col">
      <h2 class="text-2xl md:text-3xl font-bold mb-8">Popular Hotels</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% @popular_properties.each do |property| %>
          <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 h-full flex flex-col">
            <!-- Property Image with Rating -->
            <div class="relative aspect-[4/3]">
              <% if property.property_images.any? && property.property_images.first.image.attached? %>
                <%= image_tag property.property_images.first.image, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                  <p class="text-gray-400">No image</p>
                </div>
              <% end %>
              
              <!-- Rating Badge -->
              <div class="absolute bottom-3 left-3 flex items-center gap-1 bg-white rounded-full py-1 px-2 shadow-sm">
                <div class="flex">
                  <% 5.times do |i| %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  <% end %>
                </div>
                <span class="text-xs font-medium text-gray-700">4.5</span>
              </div>
            </div>
            
            <!-- Property Details -->
            <div class="flex flex-col flex-grow p-4">
              <h3 class="text-lg font-semibold text-gray-900 mb-1"><%= property.name %></h3>
              <p class="text-sm text-gray-600 mb-auto"><%= property.address %></p>
              
              <!-- Price -->
              <div class="mt-4">
                <p class="text-xl font-bold text-gray-900">$<%= number_with_precision(property.normal_price, precision: 0) %></p>
                <p class="text-xs text-gray-500">Includes taxes and fees</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Similar Stories Section -->
<section class="py-12 md:py-16 bg-gray-50">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Get inspiration for your next trip</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
      <% @related_stories.each do |story| %>
        <%= link_to story, class: "block h-full" do %>
          <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 h-full">
            <div class="relative h-48">
              <%= image_tag story.image, class: "w-full h-full object-cover" %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <div class="absolute bottom-0 left-0 p-4 w-full">
                <h3 class="font-semibold text-white text-lg"><%= story.title.truncate(40) %></h3>
              </div>
            </div>
            <div class="p-4">
              <p class="text-gray-600 text-sm line-clamp-2"><%= story.content.to_plain_text.truncate(100) %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
