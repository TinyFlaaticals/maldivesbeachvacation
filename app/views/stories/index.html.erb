<% content_for :title, "Stories" %>

<!-- Header section -->
<section class="bg-white shadow-sm py-8">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Our Stories</h1>
    <p class="mt-2 text-gray-600">Discover inspiration and travel ideas for your next vacation</p>
  </div>
</section>

<!-- Stories grid section -->
<section class="bg-gray-50 py-12 md:py-16">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="stories">
      <% @stories.each do |story| %>
        <div class="bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-300 h-full">
          <% if story.image.attached? %>
            <div class="relative h-56">
              <%= image_tag story.image, class: "w-full h-full object-cover" %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <div class="absolute bottom-0 left-0 p-4 w-full">
                <h3 class="font-semibold text-white text-lg"><%= story.title.truncate(40) %></h3>
              </div>
            </div>
          <% end %>
          <div class="p-6">
            <div class="mb-3">
              <span class="inline-block px-3 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded-full">Travel</span>
            </div>
            <% unless story.image.attached? %>
              <h2 class="text-xl font-semibold text-gray-900 mb-3"><%= story.title %></h2>
            <% end %>
            <div class="prose prose-sm text-gray-600 mb-4 line-clamp-3">
              <%= story.content.to_plain_text %>
            </div>
            <div class="flex justify-between items-center">
              <div class="text-sm text-gray-500">
                <%= story.created_at.strftime("%B %d, %Y") %>
              </div>
              <%= link_to story_path(story), class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-800" do %>
                Read more
                <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>