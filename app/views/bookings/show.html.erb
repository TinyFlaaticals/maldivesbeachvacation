<div class="max-w-3xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-2xl font-bold mb-4">Booking Details</h2>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-gray-600">Booking Reference:</p>
        <p class="font-medium"><%= @booking.token %></p>
      </div>
      <div>
        <p class="text-gray-600">Full Name:</p>
        <p class="font-medium"><%= @booking.full_name %></p>
      </div>
      <div>
        <p class="text-gray-600">Email:</p>
        <p class="font-medium"><%= @booking.email %></p>
      </div>
      <div>
        <p class="text-gray-600">Phone:</p>
        <p class="font-medium"><%= @booking.phone_number %></p>
      </div>
      <div>
        <p class="text-gray-600">Check-in Date:</p>
        <p class="font-medium"><%= @booking.check_in.strftime("%B %d, %Y") %></p>
      </div>
      <div>
        <p class="text-gray-600">Check-out Date:</p>
        <p class="font-medium"><%= @booking.check_out.strftime("%B %d, %Y") %></p>
      </div>
      <div>
        <p class="text-gray-600">Room Type:</p>
        <p class="font-medium"><%= @booking.room_type %></p>
      </div>
      <div>
        <p class="text-gray-600">Number of Rooms:</p>
        <p class="font-medium"><%= @booking.rooms %></p>
      </div>
      <div>
        <p class="text-gray-600">Meal Plan:</p>
        <p class="font-medium"><%= @booking.meal_plan %></p>
      </div>
      <div>
        <p class="text-gray-600">Number of Guests:</p>
        <p class="font-medium"><%= pluralize(@booking.adults, 'adult') %>, <%= pluralize(@booking.children, 'child') %></p>
      </div>
    </div>
    <% if @booking.additional_service_request.present? %>
      <div class="mt-4">
        <p class="text-gray-600">Additional Requests:</p>
        <p class="font-medium"><%= @booking.additional_service_request %></p>
      </div>
    <% end %>
  </div>
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-4">Property Details</h2>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-gray-600">Property Name:</p>
        <p class="font-medium"><%= @booking.property.name %></p>
      </div>
      <div>
        <p class="text-gray-600">Address:</p>
        <p class="font-medium"><%= @booking.property.address %></p>
      </div>
      <% if @booking.property.tagline.present? %>
        <div class="col-span-2">
          <p class="text-gray-600">Tagline:</p>
          <p class="font-medium"><%= @booking.property.tagline %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="flex justify-center gap-4 mt-8">
  <%= link_to property_path(@booking.property), class: "inline-flex items-center px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
    </svg>
    Back to Property
  <% end %>
  <%= link_to root_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
    </svg>
    Back to Home
  <% end %>
</div>